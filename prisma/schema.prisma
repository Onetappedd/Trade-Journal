generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Trade {
  id        String    @id @default(cuid())
  userId    String
  symbol    String
  assetType AssetType
  side      TradeSide
  quantity  Decimal
  price     Decimal
  fees      Decimal?  @default(0)
  pnl       Decimal?  @default(0)
  openedAt  DateTime
  closedAt  DateTime?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum AssetType {
  STOCK
  OPTION
  FUTURE
  CRYPTO
}

enum TradeSide {
  BUY
  SELL
  LONG
  SHORT
}
